{
  "manifest_version": 3,
  "name": "LinkedIn Job Scraper - Prototype",
  "version": "0.1",
  "description": "Estrae testo annunci LinkedIn e invia al backend per analisi NLP",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analizza job"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/search/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
